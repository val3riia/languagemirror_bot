# Основные настройки бота
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Настройки OpenRouter API (для AI функций)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-opus  # Можно изменить на другую модель

# Настройки базы данных PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/language_mirror
# Или отдельные параметры подключения:
# PGUSER=postgres
# PGPASSWORD=password
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=language_mirror

# Настройки Flask для веб-интерфейса
# SESSION_SECRET=your_secret_key_here
# DEBUG=True  # Включает режим отладки (не использовать в продакшене)