# Токен вашего Telegram бота
# Получите у @BotFather в Telegram: https://t.me/botfather
TELEGRAM_TOKEN=your_telegram_bot_token_here

# URL для подключения к PostgreSQL базе данных
# Формат: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/language_mirror_db

# Ключ для подписи сессий Flask
# Рекомендуется случайная строка
FLASK_SECRET_KEY=replace_with_random_secret_key

# Уровень логирования
# Возможные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO